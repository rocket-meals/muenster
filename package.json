{
  "private": true,
  "name": "monorepo",
  "version": "1.0.0",
  "scripts": {
    "app-frontend-start": "yarn && yarn workspace rocket-meals-dev start",
    "app-frontend-gh-pages-deploy": "yarn && yarn workspace rocket-meals-dev deploy:gh:pages",
    "test": "yarn && yarn app-backend-test",
    "app-backend-test": "yarn workspace directus-extension-rocket-meals-bundle test",
    "app-backend-build": "yarn workspace directus-extension-rocket-meals-bundle build",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean-install": "yarn clean && yarn",
    "format": "prettier . --write",
    "lint": "eslint . --ext .js,.ts,.tsx --fix"
  },
  "workspaces": [
    "apps/frontend/app",
    "apps/backend/Backend/directusExtensions/directus-extension-rocket-meals-bundle",
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.9.4",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^8.57.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
